            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 20;" text="Current Player: " textAlignment="CENTER" />
                    <TextField fx:id="current_player" editable="false" />
                </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 20;" text="Remaining Spaces: " textAlignment="CENTER" />
                    <TextField fx:id="remaining_squares_field" editable="false" />
                </children>
            </HBox>
        </children>
      </VBox>
   </center>
</BorderPane>
